{
  "name": "retro-board",
  "private": true,
  "version": "1.0.0",
  "bin": "./pkg-wrapper.cjs",
  "pkg": {
    "targets": [
      "node18-macos-arm64"
    ],
    "assets": [
      "pkg-wrapper.cjs",
      "tui-bundle.js",
      "node_modules/@roamhq/wrtc/build/**/*"
    ],
    "outputPath": "dist/binaries"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tui": "tsx tui/index.jsx",
    "build:tui": "esbuild tui/index.jsx --bundle --platform=node --target=node18 --format=esm --outfile=tui-bundle.js --external:@roamhq/wrtc --external:react-devtools-core",
    "build:tui-binary": "npm run build:tui && pkg . --compress GZip"
  },
  "dependencies": {
    "@roamhq/wrtc": "^0.9.1",
    "dotenv": "^17.2.4",
    "ink": "^4.4.1",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "y-indexeddb": "^9.0.12",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.20"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@yao-pkg/pkg": "^6.12.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.27.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.21.0",
    "vite": "^6.0.3"
  }
}
